<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 data-id="title" class="modal-title">Select File</h4>
    </div>
    <div class="modal-body">
      <div class="row form-group">
        <div data-id="message" class="message"></div>
      </div>

      <div class="row form-group">
        <div class="upload-btn">
          <label for="upload-local-file" class="btn btn-success upload-btn__txt">Select local file</label>
          <input type="file" id="upload-local-file" data-id="file-input" hidden>
        </div>
      </div>

      <div class="row form-group">Or</div>

      <div class="row form-group">
        <div data-id="url-form-row">
          <label for="upload-URL" class="control-label">Select from URL</label>

          <div class="input-group">
            <input type="text" id="upload-URL" data-id="url-input" class="form-control">
            <span class="input-group-btn">
              <button data-id="upload-url" type="button" class="btn btn-success" title="Close dialog">Select</button>
            </span>
          </div>

          <p data-id="url-error" class="help-block errormsg" hidden>This URL is invalid</p>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal" title="Close dialog">Cancel</button>
    </div>
  </div>
</div>
